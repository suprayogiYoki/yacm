generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             Int       @id @default(autoincrement())
  username       String
  email          String
  password       String
  first_name     String?
  last_name      String?
  is_active      Boolean?  @default(true)
  email_verified Boolean?  @default(false)
  last_login     DateTime?
  created_at     DateTime?
  updated_at     DateTime?
  tenant_id      Int?
  Tenant         Tenant?   @relation(fields: [tenant_id], references: [id])
}

model Role {
  id          Int      @id @default(autoincrement())
  name        String?
  description String?
  is_default  Boolean? @default(false)
}

model Permission {
  id          Int     @id @default(autoincrement())
  code        String?
  description String?
}

model UserRole {
  id      Int  @id @default(autoincrement())
  user_id Int?
  role_id Int?
}

model RolePermission {
  id            Int  @id @default(autoincrement())
  role_id       Int?
  permission_id Int?
}

model PasswordReset {
  id         Int       @id @default(autoincrement())
  user_id    Int?
  token      String?
  expires_at DateTime?
  used       Boolean?  @default(false)
}

model Session {
  id            Int       @id @default(autoincrement())
  user_id       Int?
  token         String?
  device_info   Json?
  created_at    DateTime?
  expires_at    DateTime?
  last_activity DateTime?
}

model AuditLog {
  id            Int       @id @default(autoincrement())
  user_id       Int?
  action        String?
  target_entity String?
  target_id     Int?
  details       Json?
  ip_address    String?
  user_agent    String?
  timestamp     DateTime?
}

model CustomFieldDefinition {
  id          Int      @id @default(autoincrement())
  entity_type String?
  field_name  String?
  field_type  String?
  label       String?
  required    Boolean? @default(false)
  options     Json?
}

model CustomFieldValue {
  id                  Int     @id @default(autoincrement())
  field_definition_id Int?
  entity_id           Int?
  value               String?
}

model Tenant {
  id     Int     @id @default(autoincrement())
  name   String?
  slug   String?
  config Json?
  User   User[]
}

model Translation {
  id            Int     @id @default(autoincrement())
  key           String?
  language_code String?
  value         String?
}

model Notification {
  id          Int       @id @default(autoincrement())
  user_id     Int?
  title       String?
  message     String?
  type        String?   @default("INFO")
  read        Boolean?  @default(false)
  created_at  DateTime?
  action_link String?
}
